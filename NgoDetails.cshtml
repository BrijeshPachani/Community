@model NgoCommunity.ViewModels.Ngo.NgoViewModel


@{
    ViewBag.Title = "NgoDetails";
    Layout = "~/Views/Dashboard/Dashboard.cshtml";
}


<div class="content">
    <div class="container-fluid">


        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header" data-background-color="orange">
                    <h4 class="title">Ngo Profile</h4>
                    
                   
                    <a href="" data-toggle="tooltip" title="Print"  onclick="PrintDivContent('lstProd');">

                        <img src="~/assets/img/printer.png" style="width:40px; height:40px;" />
                    </a>


                    @if (Model.nm.isApproved == false && Model.nm.isDeleted == false && Session["RoId"].ToString() == "4")
                    {
                        <div class="right">
                            <a href="@Url.Action("ApprovedNgo","Ngo",new { id= Model.nm.ngoId })" class="btn btn-success">
                                Approved Ngo
                            </a>
                        </div>
                    }

                  





                </div>
               

                <div id="lstProd">
                    @Html.Partial("_PartialNgoDetails", Model)
                </div>



            </div>

            @if (Session["RoId"].ToString() == "4")
            {
                <a href="@Url.Action("NgoList","Ngo")" class="btn btn-success">
                    Back To List
                </a>


            }

           

        </div>


    </div>




</div>





<script src="~/Scripts/jquery-1.12.4.min.js"></script>

<script>
    function PrintDivContent(divId) {
        var printContent = document.getElementById(divId);
        var WinPrint = window.open('', '', 'left=0,top=0,toolbar=0,sta­tus=0');
        WinPrint.document.write(printContent.innerHTML);
        WinPrint.document.close();
        WinPrint.focus();
        WinPrint.print();
    }
</script>
     

